@model List<EmployeeVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Employee/EditEmployee/@item.Id" class="btn btn-outline-danger"> <b>Güncelle</b></a></td>
            <td><a href="/Employee/DeleteEmployee/@item.Id" class="btn btn-outline-warning"> <b>Sil</b></a></td>
        </tr>
    }



</table>
<a href ="/Employee/AddEmployee/" class="btn btn-outline-dark"> Yeni Personel Ekle</a>


