@model EmployeeVM
@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-controller="Employee" asp-action="EditEmployee">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <div class="form-group">
                    <label asp-for="Id"> <b>Yazar Adı Soyadı:</b></label>
                    <input asp-for="Id" type="text" class="form-control" /> 
                </div>
                <div class="form-group">
                    <label asp-for="Name"> <b>Yazar Adı Soyadı:</b></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                

            </div>
        </div>
    </div>


</form>

