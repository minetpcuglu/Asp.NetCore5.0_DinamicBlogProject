@model AppUser
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form method="post" asp-controller="Writer" asp-action="WriterEditProfile" enctype="multipart/form-data">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>


                @Html.HiddenFor(x => x.Id, new { @class = "form-control" })

                <div class="form-group">
                    <label asp-for="UserName"> <b>Yazar Kullanıcı Adı:</b></label>
                    <input asp-for="UserName" type="text" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"> <b>Mail:</b></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordHash"> <b>Şifre:</b></label>
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="ImageUrl"> <b>Resim:</b></label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div>
                    <label asp-for="Surname"> <b>Yazar Soyadı:</b></label>
                    <textarea asp-for="Surname" class="form-control"></textarea>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>

            </div>
        </div>
    </div>


</form>
