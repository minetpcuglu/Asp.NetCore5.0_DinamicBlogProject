@model List<Message2>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<h1>Yazarların Giden Kutusu</h1>
<br />

<table class="table table-striped  table-hover table-bordered">

    <thead>
        <tr>
            <th>#</th>
            <th><b>Konu</b></th>
            @*<th style="width:150px">Blog Görseli</th>*@
            <th><b>Alıcı</b></th>
            <th><b>Tarih</b></th>
            <th><b>Mesajı Gör</b></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <th>@message.MessageId</th>
                <td>@message.Subject</td>
                <td><b>@message.SenderUser.WriterName</b></td>
                <td>@message.MessageDate.ToShortDateString()</td>
                <td>
                    <a href="/Message/MessageDetails/@message.MessageId" class="btn btn-primary btn-sm">Detaylar</a>


                </td>

            </tr>
        }

    </tbody>
</table>
<br />
<a href="/Message/SendMessage/" class="btn btn-success btn-sm">Yeni Mesaj Oluştur</a>


