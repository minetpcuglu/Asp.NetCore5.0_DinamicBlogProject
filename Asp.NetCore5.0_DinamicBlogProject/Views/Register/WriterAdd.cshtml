@model Writer

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> @*/*sweet alert kullanımı*/*@
<script src="~/lib/jquery/dist/jquery.js"></script> @*/*sweet alert kullanımı* root lib jquery dist jquery/*@


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" asp-controller="Register" asp-action="WriterAdd">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="WriterName"> <b>Adınız Soyadınız:</b></label>
                            <input asp-for="WriterName" class="form-control" />
                            <span asp-validation-for="WriterName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="WriterMail"> <b>E-Mail:</b></label>
                            <input asp-for="WriterMail" type="email" class="form-control" />
                            <span asp-validation-for="WriterMail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="exampleInputPassword1 mb-2"><b>Şifre:</b></label>
                            <input asp-for="WriterPassword" type="password" class="form-control" />
                            <span asp-validation-for="WriterPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="exampleInputPassword2 mb-2"><b>Tekrar Şifre Girin:</b></label>
                            <input name="againPassword" type="password" class="form-control" placeholder="Şifre Tekrarı.." />

                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="WriterImage"> <b>Resim Yolu:</b></label>
                            <input asp-for="WriterImage" class="form-control" />
                            <span asp-validation-for="WriterImage" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2"><b>Şehir:</b></label>
                            @Html.DropDownList("GetCity", (ViewBag.getCity), "Şehir Seçiniz", new { @class = "form-control dropdown" })
                        </div>
                    </div>


                    <button type="submit" class="btn btn-outline-success"><b>Değişiklikleri Kaydet</b></button>
                    <br />
               
                    <p>
                        <br />
                       
                        <a href="#" id="btn1">Tüm şartları okudum,kabul ediyorum.</a> @*/* sweet alert kullanımı*/*@
                    </p>
                </form>

            </div>
        </div>
    </div>
    <br />
    <!--<button class="btn btn-info" id="btn1">Button1</button>--> @*//sweet alert kullanımı*@
    <script>
        $('#btn1').click(function () {
            swal("Site Kabul Şartları", "Sitemize verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne varmadan gönderilmeye devam edilecektir.Eğer e-posta bülteininden çıkmak isterseniz mail ileti bültenini durdurabilirsiniz.Şifre ve Mail adresiniz güvenliğiniz için veri tabanlarımızda güvenli bir şekilde saklanmaktadır. ");
        });
    </script>
</section>

