@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1></h1>
<form>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
            <label class="form-check-label" form="@Model[i].Exists">@Model[i].Name</label>
        </div>
        <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary">Kullanıcı Lİstesine Dön</a>
    }
</form>

